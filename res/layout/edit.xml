<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|top"
    android:layout_margin="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left" >

        <EditText
            android:id="@+id/hoursTextEdit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:hint="@string/hoursTitle"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/dateTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dateTitle"
            android:inputType="none" android:focusable="false" android:onClick="showDatePickerDialog">
        </EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/projectTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/projectTitle"
        android:inputType="text" />

    <EditText
        android:id="@+id/clientTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/clientTitle"
        android:inputType="text" />

    <EditText
        android:id="@+id/notesTextEdit"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/notesTitle"
        android:inputType="textMultiLine" android:gravity="top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="#FF0000"
            android:onClick="deleteClick" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/cancel"
            android:onClick="cancelClick"/>

        <Button
            android:id="@+id/doneButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/done"
            android:onClick="doneClick" />

    </LinearLayout>

</LinearLayout>